<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baseRevealConfirmationLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/confirmation"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirmationWhoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationWhoSlash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Me" />

    <TextView
        android:id="@+id/confirmationWhoSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="/"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/confirmationWhoText"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/confirmationWhatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationWhoSlash"
        app:layout_constraintStart_toEndOf="@+id/confirmationWhoSlash"
        app:layout_constraintTop_toTopOf="@+id/confirmationWhoSlash"
        tools:text="Help" />

    <TextView
        android:id="@+id/confirmationWhatSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="/"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationWhoSlash"
        app:layout_constraintStart_toEndOf="@+id/confirmationWhatText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmationWhenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationWhatSlash"
        app:layout_constraintStart_toEndOf="@+id/confirmationWhatSlash"
        app:layout_constraintTop_toTopOf="@+id/confirmationWhatSlash"
        tools:text="Now" />


</androidx.constraintlayout.widget.ConstraintLayout>